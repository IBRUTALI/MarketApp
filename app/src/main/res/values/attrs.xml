<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MarketButton">
        <attr name="title" format="string" />
        <attr name="subtitle" format="string" />
        <attr name="titleTextColor" format="color" />
        <attr name="subtitleTextColor" format="color" />
        <attr name="titleTextAppearance" format="reference" />
        <attr name="subtitleTextAppearance" format="reference" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightIcon" format="reference" />
        <attr name="leftIconSize" format="dimension" />
        <attr name="leftIconTint" format="dimension" />
        <attr name="rightIconSize" format="dimension" />
        <attr name="rightIconTint" format="dimension" />
        <attr name="state_enabled" format="boolean" />
        <attr name="titleGravity">
            <enum name="top" value="0" />
            <enum name="start" value="1" />
            <enum name="end" value="2" />
            <enum name="bottom" value="3" />
            <enum name="center" value="4" />
            <enum name="center_vertical" value="5" />
            <enum name="center_horizontal" value="6" />
        </attr>
        <attr name="subtitleGravity">
            <enum name="top" value="0" />
            <enum name="start" value="1" />
            <enum name="end" value="2" />
            <enum name="bottom" value="3" />
            <enum name="center" value="4" />
            <enum name="center_vertical" value="5" />
            <enum name="center_horizontal" value="6" />
        </attr>
        <attr name="leftIconGravity">
            <enum name="top" value="0" />
            <enum name="start" value="1" />
            <enum name="end" value="2" />
            <enum name="bottom" value="3" />
            <enum name="center" value="4" />
            <enum name="center_vertical" value="5" />
            <enum name="center_horizontal" value="6" />
        </attr>
        <attr name="rightIconGravity">
            <enum name="top" value="0" />
            <enum name="start" value="1" />
            <enum name="end" value="2" />
            <enum name="bottom" value="3" />
            <enum name="center" value="4" />
            <enum name="center_vertical" value="5" />
            <enum name="center_horizontal" value="6" />
        </attr>
        <attr name="marketButtonStyle" format="reference"/>
    </declare-styleable>

</resources>